@page
@model LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        /* Estilos personalizados */

        /* Estilo para el título */
        body {
            background-color: #ffffff; /* Color de fondo de respaldo */
            background-image: url('/image/od2.jpg'); /* Ruta de la imagen de fondo */
            background-size: cover; /* Ajustar la imagen al tamaño del cuerpo */
            background-position: center; /* Posición de la imagen de fondo */
            background-repeat: no-repeat; /* Evitar que la imagen de fondo se repita */
}
        h1 {
            text-align: center;
            margin-top: 50px; /* Espacio superior */
            margin-bottom: 30px; /* Espacio inferior */
            font-family: Arial, sans-serif; /* Fuente */
            font-size: 2em; /* Tamaño de la fuente */
            font-weight: bold; /* Peso de la fuente */
            color: #333; /* Color de las letras */
        }

        /* Estilo para el formulario */
        form {
            background-color: #dddddd; /* Color de fondo del formulario */
        
            padding: 80px; /* Espacio interno */
            border-radius: 30px; /* Borde redondeado */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Sombra */
        }

        /* Estilo para el encabezado del formulario */
        h2 {
            text-align: center;
            margin-bottom: 20px; /* Espacio inferior */
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; /* Fuente */
            font-size: 60px; /* Tamaño de la fuente */
            color: #000000; /* Color de las letras */
        }

        /* Estilo para los campos de entrada */
        .form-floating input {
            border-radius: 5px; /* Borde redondeado */
            padding: 10px; /* Espaciado interno */
            border: 3px solid #000000; /* Borde */
            font-family: Arial, sans-serif; /* Fuente */
            font-size: 1em; /* Tamaño de la fuente */
            color: #8b8b8b; /* Color de las letras */
        }

        /* Estilo para los botones */
        .btn-primary {
            padding: 10px;
            border: 3px solid #000000;
            background-color: #000000; /* Color de fondo */
            border-color: #000000; /* Color del borde */
            border-radius: 5px; /* Borde redondeado */
        }

        .btn-primary:hover {
            background-color: #000000; /* Color de fondo al pasar el ratón */
            border-color: #000000; /* Color del borde al pasar el ratón */
        }

        /* Estilo para los enlaces */
        a {
            color: #000000; /* Color del enlace */
            font-family: Arial, sans-serif; /* Fuente */
            font-size: 1em; /* Tamaño de la fuente */
        }

        a:hover {
            color: #000000; /* Color del enlace al pasar el ratón */
        }

        /* Estilo para las casillas de verificación */
        .form-check-input {
            border-radius: 5px; /* Borde redondeado */
            border: 1px solid #ced4da; /* Borde */
            width: 1.2em; /* Tamaño */
            height: 1.2em; /* Tamaño */
        }

        .form-check-input:checked {
            background-color: #000203; /* Color de fondo cuando está marcado */
            border-color: #000000; /* Color del borde cuando está marcado */
        }

        /* Estilo para las casillas de verificación marcadas */
        .form-check-input:checked {
            background-color: #000000; /* Color de fondo cuando está marcado */
            border-color: #000000; /* Color del borde cuando está marcado */

        }

        #login-submit {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; /* Fuente */
            font-size:25px;
        }

        .form-group {
        margin-bottom: 20px;
        }

        .form-label {
            color: #8b8b8b;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px;
            border: 3px solid #000000;
        }

        .form-control:focus {
            border-color: #000000;
            box-shadow: 0 0 0 0.25rem rgba(0, 0, 0, 0.25);
         }

        .form-error {
            color: #dc3545;
        }
    </style>
</head>
<br>
<br>
<br>
<br>
<br>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form id="account" method="post">
                    <h2>INICIAR SESION</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">INGRESAR</button>
                    </div>
                    <div class="text-center mt-3">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">No tienes una cuenta? Registrate</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
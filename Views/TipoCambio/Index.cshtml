@model Prestigious.Integration.currencyexchange.dto.TipoCambio

@{
    ViewData["Title"] = "TipoCambio";
}
<div class="navi">
    <div class="container">
        <h1 class="text-center mb-4">Formulario de Tipo Cambio</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-controller="TipoCambio" asp-action="Exchange" method="post">
                    <div class="form-group">
                        <label asp-for="From" class="control-label"></label>
                        <input asp-for="From" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="To" class="control-label"></label>
                        <input asp-for="To" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label"></label>
                        <input asp-for="Cantidad" class="form-control" />
                    </div>

                    <div class="form-group text-center" style="margin-top: 15px;">
                        <button type="submit" class="btn btn-dark">Intercambio</button>
                        <a asp-action="Index" class="btn btn-dark">Volver</a>
                    </div>
                </form>
                <h1 style="margin-top: 20px;">Tipo Cambio: @ViewData["rate"]</h1>
                <h1>Cambio Total: @ViewData["cambio"]</h1>
            </div>
        </div>
    </div>
</div>

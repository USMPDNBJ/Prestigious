@model Prestigious.Models.Registrate;



<nav style="background-color: #F5F5F5;" class="navbar navbar-expand-lg navbar-light ">
    <div class="container-fluid">
        <div>
            <h1><a style="color: black;" class="nav-link active" aria-current="page" href="">Prestigious</a></h1>
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02"
            aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#"> <Strong>Inicio</Strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#"><strong>Nostros</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#"><img width="40px" src="~/images/carrito.png"
                            alt=""></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#"> <strong>Iniciar Sesion</strong></a>
                </li>
            </ul>

        </div>
    </div>
</nav>

<div style="text-align: center;position: relative;top: 10px;">
    <h3> <strong>Registrate</strong></h3>
</div>




<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Registrate" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"> <strong>Nombre :</strong></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApellidoPaterno" class="control-label"><strong>Apellido Paterno :</strong></label>
                    <input asp-for="ApellidoPaterno" class="form-control" />
                    <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApellidoMaterno" class="control-label"><strong>Apellido Materno :</strong></label>
                    <input asp-for="ApellidoMaterno" class="form-control" />
                    <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"><strong>Email :</strong></label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contrasena" class="control-label"><strong>Contraseña</strong></label>
                    <input type="password" asp-for="Contrasena" class="form-control" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmarContrasena" class="control-label"><strong>Confirmar
                            Contraseña</strong></label>
                    <input type="password" asp-for="ConfirmarContrasena" class="form-control" />
                    <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                </div>
                <div style="position: relative; top: 10px;" class="form-group text-center">
                    <button type="submit" class="btn btn-dark btn-lg active">Registrarse</button>
                </div>
            </form>
            <h1>@ViewData["Message"]</h1>
            <div style="text-align: center;position: relative;top: 10px;">
                <h5>¿Ya tienes cuenta? <a style="color: black;" asp-action="Registrate">Iniciar Sesion</a></h5>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
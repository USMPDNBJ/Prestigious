@model Prestigious.Models.Login
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <h1 class="text-center mb-4">INICIAR SESION</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Login" asp-action="Index" method="post">
                <div class="form-group">
                    <label asp-for="Usuario" class="control-label"></label>
                    <input asp-for="Usuario" class="form-control" />
                    <br>
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contraseña" class="control-label"></label>
                    <input asp-for="Contraseña" type="password" class="form-control" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary bg-dark">Iniciar Sesion</button>
                </div>
            </form>
            <h1>@ViewData["Message"]</h1>
                <div style="text-align: center;position: relative;top: 10px;">
                <h5>¿Aún no tienes cuenta? <a style="color: black;" asp-action="Registrate">Registrate</a></h5>
            </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
